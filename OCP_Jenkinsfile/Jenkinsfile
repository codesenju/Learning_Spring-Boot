node('maven') {
stage 'buildInDev'
openshiftBuild(namespace: 'ifinance-gli-dev', buildConfig: 'boot-app', showBuildLogs: 'true')
stage 'deployInDev'
openshiftDeploy(namespace: 'ifinance-gli-dev', deploymentConfig: 'boot-app')
openshiftScale(namespace: 'ifinance-gli-dev', deploymentConfig: 'boot-app', replicaCount: '1')
stage 'deployInUat'
openshiftTag(namespace: 'ifinance-gli-dev', sourceStream: 'boot-app', sourceTag: 'latest', destinationStream: 'boot-app', destinationTag: 'promoteToQA')
openshiftDeploy(namespace: 'ifinance-gli-uat', deploymentConfig: 'boot-app')
//openshiftScale(namespace: 'ifinance-gli-uat', deploymentConfig: 'boot-app',replicaCount: '2')
}
